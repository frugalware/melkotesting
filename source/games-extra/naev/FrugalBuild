pkgrel=1
pkgdesc="2D Action/rpg game"
url="http://code.google.com/p/naev"
archs=('i686' 'x86_64')
groups=('games-extra')
depends=('naev-data' 'freetype2' 'sdlimage' 'sdl_mixer' 'openal' 'libgl' 'libxml2' 'libglu')
up2date="lynx -dump $url/wiki/Download?tm=2|grep Stable:|sed 's/.*Stable: \(.*\).$/\1/'"
source="http://netcologne.dl.sourceforge.net/project/$pkgname/$pkgname-$pkgver/$pkgname-$pkgver.tar.bz2"
sha1sums=('b10fe0b740909785ec74c84c6a0ebafc29a870e6')
Fconfopts="$Fconfopts --disable-debug --disable-shave --with-ndata-path=/usr/share/$pkgname/ndata-$pkgver"

# optimization OK
