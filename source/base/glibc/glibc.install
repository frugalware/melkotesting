
post_install() {
	#added support to /etc/ld.so.conf.d/*.conf
	if ! grep -q '^include /etc/ld\.so\.conf\.d/\*\.conf' /etc/ld.so.conf ; then
		echo "include /etc/ld.so.conf.d/*.conf" >> /etc/ld.so.conf
		mkdir -p /etc/ld.so.conf.d
		ldconfig
	fi
}

post_upgrade() {
	#added support to /etc/ld.so.conf.d/*.conf
	if ! grep -q '^include /etc/ld\.so\.conf\.d/\*\.conf' /etc/ld.so.conf ; then
		echo "include /etc/ld.so.conf.d/*.conf" >> /etc/ld.so.conf
		mkdir -p /etc/ld.so.conf.d
		ldconfig
	fi
}

op=$1
shift
$op $*
