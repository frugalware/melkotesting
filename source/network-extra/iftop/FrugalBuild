pkgname=iftop
pkgver=1.0pre2
pkgrel=1
pkgdesc="a program to show bandwidth usage grouped by ports"
url="http://www.ex-parrot.com/~pdw/iftop/"
depends=('ncurses' 'libpcap')
groups=('network-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url | grep tar.gz | sed -ne 's/.*-\(.*\)\.t.*/\1/;1 p'"
source=($url/download/$pkgname-$pkgver.tar.gz)
sha1sums=('d4dc473f8263192334da6289b69e102a4ae7df9e')

# optimization OK
