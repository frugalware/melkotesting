pkgname=mboxgrep
pkgver=0.7.9
pkgrel=2
pkgdesc="Scans a mailbox for messages matching a regular expression."
Finclude sourceforge
depends=('bzip2' 'zlib' 'pcre>=8.30')
groups=('network-extra')
archs=('i686' 'x86_64')
sha1sums=('dc6dcaee5fc22bf606328b378883da34600be11a')

build()
{
	Fconfopts="$Fcontopts --mandir=$Fdestdir/usr/share/man --infodir=$Fdestdir/usr/share/info"
	Fbuild
}

# optimization OK
