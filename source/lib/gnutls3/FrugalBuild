# Maintainer: voroskoi <voroskoi@frugalware.org>
# Contributor: Miklos Vajna <vmiklos@frugalware.org>

pkgname=gnutls3
_F_archive_name=gnutls
pkgver=3.0.5
pkgrel=2
pkgdesc="A library which provides a secure layer over a reliable transport layer"
url="http://www.gnu.org/software/gnutls/"
groups=('lib')
archs=('i686' 'x86_64' 'ppc' 'arm')
depends=('libtasn1>=1.7' 'readline' 'libstdc++' 'lzo' 'libnettle')
makedepends=('gtk-doc')
options=('scriptlet')
up2date="lynx -dump ftp://ftp.gnutls.org/pub/gnutls/|grep tar.xz$ | grep -v rc | sed -n 's/.*-\(.*\)\.t.*/\1/;$ p'"
source=(ftp://ftp.gnutls.org/pub/gnutls/$_F_archive_name-$pkgver.tar.xz)
Finclude texinfo
signatures=($source.sig)

build()
{
	Fmake --enable-gtk-doc
	make check || return 1
	Fmakeinstall
}

# optimization OK
