# Compiling Time: 0.10 SBU
# Maintainer: Elentir <elentir@frugalware.org>

pkgname=camlp5
pkgver=6.02.3
pkgrel=2
pkgdesc="Camlp5 is a preprocessor-pretty-printer of OCaml."
url="http://cristal.inria.fr/~ddr/camlp5"
source=("$url/distrib/src/$pkgname-$pkgver.tgz" \
	"http://cristal.inria.fr/~ddr/camlp5/distrib/src/patch-6.02.3-1")
depends=('ocaml>=3.12.0')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
Fconfopts="-prefix /usr"
sha1sums=('eb0f4f9ade52c2c1e972d61b334bcf01fea76dfc' \
          '4f9f0c50535248f41b8ff9ca4fd31712f0ae292e')

build() {
  Fpatch patch-*
  Fmake
  make opt || Fdie
  Fmakeinstall
}
