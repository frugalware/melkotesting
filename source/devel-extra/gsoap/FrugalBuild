pkgname=gsoap
pkgver=2.8.6
pkgrel=1
pkgdesc="A cross-platform development environment for C and C++ SOAP/XML Web services."
depends=('libstdc++')
groups=('devel-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="gsoap2"
_F_sourceforge_sep="_"
_F_sourceforge_ext=".zip"
Finclude sourceforge
sha1sums=('ec0d3f06d0afbee481a3afd7f8828704404068c3')
_F_cd_path=${pkgname}-${pkgver%.*}

build()
{
	#Version 2.8.6 still won't compile without this
	unset MAKEFLAGS
	Fbuild
}

# optimization OK
