# Compiling Time: 0.23 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=postgis
pkgver=2.0.0
pkgrel=1
pkgdesc="Adds support for geographic objects to PostgreSQL including the experimental PostGis RASTER type"
url="http://postgis.refractions.net"
depends=('postgresql' 'gdal>=1.9.1')
makedepends=('proj')
groups=('devel-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download | grep -m1 .tar.gz | sed 's/.*-\(.*\).t.*/\1/'"
source=($url/download/$pkgname-$pkgver.tar.gz)
sha1sums=('ff8c8ee9f35120a0312016297055bbfde1f45069')

build() {
	Fcd
	sh ./autogen.sh
	Fconf --with-raster
	make || Fdie
	make DESTDIR=$Fdestdir install || Fdie
}

# optimization OK
