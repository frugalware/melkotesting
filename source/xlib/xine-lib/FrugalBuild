pkgname=xine-lib
pkgver=1.2.2
pkgrel=2
pkgdesc="Xine multimedia playback engine libraries"
_F_sourceforge_dirname="xine"
_F_sourceforge_ext=".tar.xz"
Finclude sourceforge
url="http://xinehq.de"
depends=('ffmpeg>=1.0' 'libmpcdec' 'libxinerama' 'libpulse' 'libdvdnav' \
	'imagemagick' 'libtool' 'jack' 'libmad' 'libxvmc' 'v4l-utils' \
	'vcdimager' 'aalib' 'libglu' 'libvdpau' 'libmodplug' 'wavpack' \
	'libbluray' 'libmng' 'libdca' 'speex')
makedepends=('optipng' 'xmlto')
options=('scriptlet')
groups=('xlib')
archs=('i686' 'x86_64')
sha1sums=('a349cbb0b72256bb262377796a022dcf63829b4c')

build()
{
	export CFLAGS="$CFLAGS -UHAVE_MMX"
	Fbuild \
		--disable-optimizations \
		--enable-ipv6 \
		--enable-mmap \
		--enable-aalib \
		--enable-fb \
		--enable-glu \
		--enable-xinerama \
		--enable-xvmc \
		--enable-vdpau \
		--enable-dvb \
		--enable-v4l \
		--enable-v4l2 \
		--enable-libv4l \
		--enable-vcd \
		--enable-vdr \
		--enable-bluray \
		--enable-a52dec \
		--enable-asf \
		--enable-faad \
		--enable-opengl \
		--enable-gdkpixbuf \
		--enable-dts \
		--enable-mad \
		--enable-modplug \
		--enable-musepack \
		--enable-mng \
		--enable-real-codecs \
		--enable-w32dll \
		--with-freetype \
		--with-fontconfig \
		--with-x \
		--with-alsa \
		--with-jack \
		--with-pulseaudio \
		--with-sdl \
		--with-xcb \
		--with-external-dvdnav \
		--with-imagemagick \
		--with-libflac \
		--with-speex \
		--with-theora \
		--with-vorbis \
		--with-wavpack
}

# optimization OK
