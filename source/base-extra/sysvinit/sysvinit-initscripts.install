post_install() {
	systemctl enable local.service >/dev/null 2>&1
}

post_upgrade() {
	systemctl daemon-reload >/dev/null 2>&1
}

pre_remove() {
	systemctl --no-reload disable local.service >/dev/null 2>&1
	systemctl stop local.service >/dev/null 2>&1
}

post_remove() {
	systemctl daemon-reload >/dev/null 2>&1
}

op=$1
shift
$op $*
