pkgname=alsa-utils
pkgver=1.0.25
pkgrel=2
pkgdesc="An alternative implementation of Linux sound support"
url="http://www.alsa-project.org"
depends=("alsa-lib>=1.0.25" 'dialog' 'pciutils' 'libsamplerate' 'psmisc')
makedepends=('xmlto' 'docbook-xsl' 'docbook-xml')
options=('scriptlet')
groups=('multimedia')
archs=('i686' 'x86_64')
_F_archive_grepv='rc'
up2date="Flasttar $url"
source=(ftp://ftp.alsa-project.org/pub/utils/$pkgname-$pkgver.tar.bz2)
sha1sums=('c02eb4a3b9649950b803628371a840fb96ed6370')
_F_systemd_units=(alsa-restore=e alsa-store=e)
Finclude systemd

build()
{
	Fbuild
	Fgenscriptlet
}

# optimization OK
