# Compiling Time: 4.20 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=openimageio
pkgver=1.1.2
pkgrel=2
pkgdesc="A library for reading and writing images, including classes, utilities, and applications."
url="http://www.openimageio.org/"
depends=('libboost>=1.50.0' 'opencv' 'libqtopengl' 'glew')
makedepends=('boost>=1.50.0')
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_scm_type="git"
_F_scm_url="http://github.com/OpenImageIO/oiio"
_F_scm_tag="db9df57"
Finclude scm cmake
source=(fix32bit-fail.patch)
sha1sums=('0d3fde41de20d7c2751631b96ae8f71c27da40af')

build() {
        Funpack_scm
	cd $Fsrcdir/$pkgname/src || Fdie
	CMake_build
	make || Fdie
}

# optimization OK
