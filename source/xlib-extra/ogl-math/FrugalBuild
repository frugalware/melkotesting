# Compiling Time: 0 SBU
# Maintainer: Melko <melko@frugalware.org>

pkgname=ogl-math
pkgver=0.9.3.2
pkgrel=1
pkgdesc="C++ mathematics library for 3D software based on the OpenGL Shading Language (GLSL) specification."
depends=()
groups=('xlib-extra')
archs=('i686' 'x86_64')
_F_sourceforge_name="glm"
_F_sourceforge_ext=".zip"
_F_archive_grepv="[AB]"
Finclude sourceforge
sha1sums=('0378dd2f8a434b63e62c87d2ea4942d873d4f75f')

build(){
	Fcd
	Fmkdir usr/include
	Fcprel glm usr/include/
	Frm usr/include/glm/CMakeLists.txt
}

# optimization OK
