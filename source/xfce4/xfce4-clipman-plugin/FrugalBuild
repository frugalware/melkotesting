pkgname=xfce4-clipman-plugin
pkgver=1.2.2
pkgrel=1
pkgdesc="Clipboard manager plugin for the Xfce panel."
makedepends=('intltool')
depends=('libxfcegui4>=4.8.1-2' 'xfce4-panel>=4.8.0' 'libuuid' 'unique1' 'libxtst')
groups=('xfce4' 'xfce4-goodies')
archs=('i686' 'x86_64')
_F_gnome_iconcache=y
_F_xfce_category="panel-plugins"
Finclude xfce4 gnome-scriptlet
sha1sums=('39b2d1f2c436cdcff698b54cd477f12d743acce0')

build() {
  Fcd
  # fix for exo 0.5.6
  Fsed "exo-0.3" "exo-1" configure
  Fbuild --enable-unique
  Fbuild_gnome_scriptlet
}


# optimization OK

