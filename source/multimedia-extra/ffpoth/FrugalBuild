pkgname=ffpoth
pkgver=0.1201
pkgrel=1
pkgdesc="ffmpeg poly thumbnail - a movie thumbnailer"
depends=('ffmpeg')
groups=('multimedia-extra')
archs=('i686' 'x86_64')
Finclude googlecode
sha1sums=('c5fdf7c793b28f6c36e2f5ed3b7d8354a597761a')

build() {
	Fmake
	Fmkdir usr/bin
	Fexerel $pkgname usr/bin/
	Fmanrel $pkgname.1
}
