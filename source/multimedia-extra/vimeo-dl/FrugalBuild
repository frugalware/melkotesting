pkgname=vimeo-dl
pkgver=0.0.7
pkgrel=2
pkgdesc="A command line tool to download videos from vimeo.com"
depends=('perl-libwww')
groups=('multimedia-extra')
archs=('i686' 'x86_64')
_F_googlecode_dirname="trizen"
Finclude googlecode
up2date=$pkgver
sha1sums=('57cd036db59ea64641c582a8a4ab7ade128e8774')

build() {
	Fcd "."
	Fexe $pkgname /usr/bin/$pkgname
}
