pkgname=chardet
_F_archive_name="${pkgname}2"
pkgver=2.0.3
pkgrel=1
pkgdesc="Character encoding auto-detection in Python 2."
url="https://github.com/byroot/chardet"
Finclude python
depends=("python>=$_F_python_ver")
makedepends=('python-distribute')
groups=('apps-extra')
archs=('i686' 'x86_64')
_F_pypi_name="${pkgname}2"
Finclude pypi
sha1sums=('9c48f8fbc8d7ded7eb4592bd76bf56ac3bcab7f4')

build()
{
	Fcd $_F_archive_name-$pkgver
	Fbuild
}
