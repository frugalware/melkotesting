pkgname=usb-modeswitch
pkgver=1.2.1
pkgrel=1
pkgdesc="A mode switching tool for controlling 'flip flop' (multiple device) USB gear"
url="http://www.draisberghof.de/usb_modeswitch/"
up2date="lynx -dump $url | grep $pkgname -m1 | sed 's/.*$pkgname-\(.*\)\.tar.*/\1/'"
source=($url/$pkgname-$pkgver.tar.bz2)
depends=('libusb')
rodepends=('usb-modeswitch-data')
groups=('apps-extra')
archs=('i686' 'x86_64')
sha1sums=('a0d27f8624a4d4dcd5b1d05652cc0830e9e3d2a9')

# optimization OK
