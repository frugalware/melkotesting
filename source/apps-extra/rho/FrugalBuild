# Compiling Time: 0.02 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=rho
pkgver=1.1.12
pkgrel=2
pkgdesc="A small, very configurable console-based text editor."
url="http://rho.tuxfamily.org"
depends=('ncurses')
groups=('apps-extra')
archs=('i686' 'x86_64')
up2date="Flasttar $url"
source=($url/$pkgname-$pkgver.tar.bz2)
sha1sums=('19e6dbda934f116fe41a17cbfd063faa3f12b7b9')

build() {
	Fcd
	Fsed '/usr/local' '/usr' include/$pkgname.h
	Fsed '/usr/local' '/usr' Makefile
	Fmake
	Fexerel $pkgname usr/bin/rho

	# Install documentation
	Fmkdir usr/share/$pkgname
	cp -R docs/* $Fdestdir/usr/share/rho/
	mv $Fdestdir/usr/share/rho/$pkgname.rc $Fdestdir/usr/share/rho/.rhorc
}
