# Compiling Time: 0.41 SBU
# Maintainer: kikadf <kikadf.01@gmail.com>

pkgname=trojita
pkgver=0.2.9.4
pkgrel=1
pkgdesc="Trojitá, a Qt IMAP e-mail client"
depends=('libqtgui' 'libqtsql' 'libqtwebkit' 'libqtscript' 'libqttest')
_F_sourceforge_ext=".tar.bz2"
Finclude sourceforge
groups=('xapps-extra')
archs=('i686' 'x86_64')
sha1sums=('ac5d3e508970878d47955b412eb57a9a7c1ae451')

build()
{
	Fcd
	Fsed "\/local" "" install.pri
	qmake || Fdie
	Fmake
	Fmakeinstall INSTALL_ROOT="$Fdestdir"
}

# optimization OK
