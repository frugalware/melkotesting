# Compiling Time: 0.07 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=sparkleshare
pkgver=0.6.0
pkgrel=1
pkgdesc="An open-source clone of Dropbox, written in Mono"
depends=('gtk2-sharp' 'dbus-sharp-glib' 'nant' 'webkit-sharp' 'notify-sharp' 'openssh')
makedepends=('intltool')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_gnome_iconcache="y"
_F_github_author="hbons"
_F_github_name="SparkleShare"
Finclude github gnome-scriptlet
sha1sums=('067b838a0da5dcdd6df33836b04e04da3c76728e')

_F_desktop_name="SparkleShare"
_F_desktop_exec="sparkleshare start"
_F_desktop_icon="/usr/share/pixmaps/sparkleshare.png"
_F_desktop_categories="Network"

build() {
	Fbuild
	Ficonrel data/icons/folder-${pkgname}-48.png
	mv $Fdestdir/usr/share/pixmaps/folder-${pkgname}-48.png $Fdestdir/usr/share/pixmaps/$pkgname.png
	Fbuild_gnome_scriptlet
	Fdesktop2
}
