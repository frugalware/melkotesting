# Compiling Time: 0.19 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=qpdfview
pkgver=0.2.1
pkgrel=1
pkgdesc="qpdfview is a tabbed PDF viewer using the poppler library"
depends=('poppler-qt4' 'libuuid' 'bzip2')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude launchpad
sha1sums=('d6964cc42c7e875045cd7c81fbbd6d9e973ccf0f')

build() {
	Fcd
	qmake || Fdie
	Fmake
	Fexerel usr/bin/$pkgname
	Ficonrel icons/$pkgname.png
	Ffilerel miscellaneous/$pkgname.desktop usr/share/applications/$pkgname.desktop
	Fmanrel miscellaneous/$pkgname.1
}

# optimization OK
