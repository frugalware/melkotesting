# Compiling Time: 0.22 SBU
# Maintainer: centuri0 <achevaux at gmail dot com>

pkgname=converseen
pkgver=0.5
pkgrel=1
pkgdesc="A batch image conversion tool written in C++ with Qt4 and Magick++."
depends=('imagemagick' 'libqtgui' 'xz' 'libtool' 'libuuid')
makedepends=('qt4')
groups=(xapps-extra)
archs=('i686')
_F_kde_id=111558
Finclude kde
up2date="lynx -dump http://$pkgname.sourceforge.net/ | grep Latest | cut -d- -f1 | tr -d ' '"
source=(http://downloads.sourceforge.net/sourceforge/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('90d8f033d1e976efeb87504c5d341058fe8a1f65')

build() {
	Fcd
	qmake || Fdie
	Fmake
	make INSTALL_ROOT=$Fdestdir install || Fdie
}

# optimization OK
