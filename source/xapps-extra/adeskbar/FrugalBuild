# Compiling Time: 0.01 SBU
# Maintainer: jercel <jercel16@gmail.com>

pkgname=adeskbar
pkgver=0.4.3
pkgrel=1
pkgdesc="A Quick Application Launcher"
url="http://adeskbar.tuxfamily.org/"
depends=('gnome-menus' 'pyxdg')
groups=('xapps-extra')
archs=('x86_64' 'i686')
up2date="Flasttar ${url}"
source=(http://download.tuxfamily.org/$pkgname/sources/$pkgname-$pkgver.tar.bz2)
sha1sums=('595ce8d53fb97bad0428804cd1c2fc5a12a3b4ed')

build()
{
	Fcd
	Fmkdir /usr/{bin,share/{adeskbar,pixmaps,applications}}
	Fcp $pkgname-$pkgver/src/* /usr/share/adeskbar
	Fcp $pkgname-$pkgver/src/images/adeskbar.png /usr/share/pixmaps
	Fcp $pkgname-$pkgver/adeskbar.desktop /usr/share/applications
	Finstall 755 $pkgname-$pkgver/adeskbar.sh /usr/bin/adeskbar
}
