# Compiling Time: 0.29 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=guimup
pkgver=0.3.1
pkgrel=1
pkgdesc="A mouse operated graphical user interface (GUI) for MPD"
depends=('libmpdclient' 'libsoup' 'gtkmm' 'unique' 'bzip2')
rodepends=('mpd')
makedepends=('intltool')
groups=('xapps-extra')
archs=('i686' 'x86_64')
_F_sourceforge_dirname="musicpd"
_F_sourceforge_subdir="Guimup/"
_F_sourceforge_sep="_"
_F_sourceforge_ext="_src.tar.gz"
Finclude sourceforge
up2date="Flastarchive http://sourceforge.net/projects/musicpd/files/Guimup/0.3.1 _src.tar.gz"
source=($source $pkgname.png)
_F_cd_path="${pkgname}_${pkgver}_src/$pkgname"
sha1sums=('352c19fd670b45cd66462a01edb9aa2d94f38b07' \
          'dc8f85c934ab41ffd7c86817ee1411973776bce1')

_F_desktop_name="Guimup"
_F_desktop_icon="guimup"
_F_desktop_categories="GTK;AudioVideo;Player"


build() {
	Fcd
	Fbuild
	Ffile $pkgname.png usr/share/pixmaps/guimup.png
	Fdesktop2
}
