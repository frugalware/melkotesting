# Compiling Time: 0.21 SBU
# Maintainer: Slown <slown@frugalware.org>

pkgname=yodownet
pkgver=2012.02.29
pkgrel=1
pkgdesc="yoDownet, The Previous Generation Graphical Download Manager, Implemented on Qt"
depends=('libqtgui' 'libqtnetwork' 'libqtsql' 'libqtxml' 'libmaia')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
up2date="Flasttar http://sourceforge.net/projects/yodownet/files/sources"
_F_cd_path="."
sha1sums=('c633c99caa2fa332048f44fc1e70f36663859051')

build() {
	Fcd
	qmake || Fdie
	Fmake
	Fexerel /usr/bin/yoDownet
	Ficonrel images/yoDownet_64.svg
	Ffilerel installers/yoDownet.desktop /usr/share/applications/$pkgname.desktop
}

# optimization OK
