pkgname=webkit2pdf
pkgver=0.2
pkgrel=2
pkgdesc="A little tool designed to fetch wep pages and export them to numbered PDF files"
depends=('webkit' 'poppler-glib>=0.20.3')
makedepends=('intltool')
groups=('xapps-extra')
archs=('i686' 'x86_64')
Finclude sourceforge
source=($source poppler-0.18.patch)
sha1sums=('bd4ecc533817f8e6ec2805fa659f0f206e586f7a' \
          'c958f8dc846712122451fddd3450b836ff393ae4')

build() {
	export LDFLAGS="-lgthread-2.0"
	Fbuild
}

# optimization OK
