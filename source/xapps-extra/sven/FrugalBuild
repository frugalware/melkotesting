depends=('gtk+2>=2.20.0-2' 'pcre>=8.30' 'libxtst')
makedepends=('pkgconfig')
groups=('xapps-extra')
archs=('i686' 'x86_64')
up2date="lynx -dump $url/download-en.shtml | grep -m1 tar.bz2 | sed 's/.*n-\(.*\).t.*/\1/'"
source=(http://sven.linux.kiev.ua/$pkgname-$pkgver.tar.bz2)
