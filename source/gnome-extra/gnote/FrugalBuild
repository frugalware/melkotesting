pkgname=gnote
pkgver=0.8.2
pkgrel=1
pkgdesc="Gnote is a port of Tomboy to C++"
groups=('gnome-extra')
depends=('glibmm' 'gtk+3' 'gtkmm' 'libxml++' 'gconf>=2.28.1' 'gtkspell3' 'libboost>=1.46.1' \
	'dbus-glib' 'openssl>=1.0.0')
makedepends=('boost' 'intltool' 'gnome-doc-utils')
archs=('i686' 'x86_64')
options=('scriptlet')
_F_gnome_glib="y"
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
_F_gnome_devel="y"
_F_gnome_ext=".tar.xz"
Finclude gnome gnome-scriptlet
Fconfopts="$Fconfopts --enable-dbus --disable-applet"
sha1sums=('b74728132d4a52ba5f1e33a8ef281f2d06ecc107')

build()
{
	Fbuild
	Fbuild_gnome_scriptlet
}

