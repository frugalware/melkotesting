# Compiling Time: 0.07 SBU
# Maintainer: Devil505 <devil505linux@gmail.com>

pkgname=postler
pkgver=20120105
pkgrel=2
pkgdesc="A lean mail interface"
url="http://git.xfce.org/apps/postler"
depends=('libcanberra' 'libzeitgeist' 'folks' 'libtool')
makedepends=('vala' 'intltool' 'librsvg' 'gettext' 'python' 'msmtp')
groups=('gnome-extra')
archs=('i686' 'x86_64')
options=('force')
_F_gnome_desktop="y"
_F_gnome_iconcache="y"
Finclude gnome-scriptlet
up2date="Flasttar http://ftp.frugalware.org/pub/other/people/devil505/snapshots/$pkgname"
source=(http://ftp.frugalware.org/pub/other/people/devil505/snapshots/$pkgname/$pkgname-$pkgver.tar.bz2)
sha1sums=('4d94f3b7d328bee3d80e45279c9c721eea197d80')

build()	{
	Fcd
	Fpatchall
	./waf configure --prefix=/usr --disable-docs --disable-libstemmer || Fdie
	./waf build || Fdie
	./waf --destdir=$Fdestdir install || Fdie
	Fbuild_gnome_scriptlet
}

