build ()
{
	Fmkdir usr/share/hydrogen/data/drumkits/
	cd ${Fdestdir}/usr/share/hydrogen/data/drumkits/ || Fdie
	for drumkit in ${drumkits[@]}
	do
		tar -xzvf ${Fsrcdir}/${drumkit}${drum_ext} || Fdie
	done
	Fdirschmod /usr 0755
	Ffileschmod /usr 0644
}
